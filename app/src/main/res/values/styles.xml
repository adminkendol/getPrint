<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d2d3d5</item>
        <item name="colorPrimaryDark">#007b5f</item>
        <item name="colorAccent">#d2d3d5</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="AppTheme.noJudul" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#00c799</item>
        <item name="colorPrimaryDark">#007b5f</item>
        <item name="colorAccent">#d2d3d5</item>
        <item name="android:textColor">#1e1e1e</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#d2d3d5</item>
        <item name="colorPrimaryDark">#007b5f</item>
        <item name="colorAccent">#d2d3d5</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="Widget.Button" parent="android:Widget">
        <item name="android:background">@drawable/list_button</item>
    </style>
    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="android:textColor">#007b5f</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
    <style name="customTabLayout" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">#fefefe</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#fefefe</item>
        <item name="android:divider">#000</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">#fefefe</item>
    </style>

</resources>
