<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/judul">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/primary"
        android:id="@+id/relativeLayoutA">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terima kasih,"
            android:textColor="@color/judul"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:gravity="center_horizontal"
            android:id="@+id/labelTks"
            android:layout_alignTop="@+id/labelName"
            android:layout_toLeftOf="@+id/labelName"
            android:layout_toStartOf="@+id/labelName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama user!"
            android:textColor="@color/judul"
            android:layout_marginRight="68dp"
            android:layout_marginEnd="68dp"
            android:id="@+id/labelName"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_above="@+id/labelLine1"
            android:layout_alignRight="@+id/logo"
            android:layout_alignEnd="@+id/logo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudah bergabung dengan Get Print"
            android:textColor="@color/judul"
            android:gravity="center_horizontal"
            android:id="@+id/labelLine1"
            android:layout_above="@+id/labelLine2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
            android:textAlignment="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happy Printing !"
            android:textColor="@color/judul"
            android:gravity="center_horizontal"
            android:id="@+id/labelLine2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LANJUT"
        android:textSize="20dp"
        android:textColor="@color/judul"
        android:background="@color/primary"
        android:gravity="center_horizontal"
        android:id="@+id/submit"
        android:textAlignment="center"
        android:layout_below="@+id/relativeLayoutA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />


</RelativeLayout>