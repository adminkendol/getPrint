<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlLogin"
    android:background="@color/judul">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/loginForm"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="AKUN/EMAIL"
                android:textColor="@color/judul"
                android:background="@color/primary"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:id="@+id/labelAkun"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="AKUN/EMAIL"
                android:theme="@style/MyEditTextTheme"
                android:textColorHint="@color/textLabel"
                android:paddingLeft="30dp"
                android:layout_below="@+id/labelAkun"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="PASSWORD"
                android:textColor="@color/judul"
                android:background="@color/primary"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:id="@+id/labelPass"
                android:layout_below="@+id/akun"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="PASSWORD"
                android:theme="@style/MyEditTextTheme"
                android:textColorHint="@color/textLabel"
                android:paddingLeft="30dp"
                android:layout_below="@+id/labelPass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/llPass"
                android:layout_below="@+id/password"
                android:background="@color/primary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:text="LOG IN"
                android:textColor="@color/primary"
                android:background="@color/judul"
                android:id="@+id/submitLogin"
                android:gravity="center"
                android:layout_below="@+id/llPass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:text="LUPA KATA SANDI"
                android:textColor="@color/judul"
                android:background="@color/primary"
                android:id="@+id/submitLupa"
                android:gravity="center"
                android:layout_below="@+id/submitLogin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/submitLupa"
                android:background="@color/primary"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>