<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="module.Upload_design">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_design"
        android:id="@+id/imageDesign"
        android:layout_marginTop="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="*Mohon periksa kembali desain anda, karena Get Print akan mencetak sesuai desain yang terupload"
        android:textColor="@color/judul"
        android:layout_marginTop="20dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageDesign"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next_white"
        android:id="@+id/next"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />
</RelativeLayout>